<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Links</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>URL</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each links}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{url}}</td>
                        <td>{{description}}</td>
                        <td>{{createdAt}}</td>
                        <td>
                            <a href="/links/edit/{{_id}}" class="btn btn-secondary">
                                <i class="fas fa-marker"></i>
                            </a>
                            <a href="/links/delete/{{_id}}" class="btn btn-danger">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>